# ===========================================
# CivicService Environment Configuration
# ===========================================
# Copy this file to .env and fill in the values
# NEVER commit .env to version control
# ===========================================

# ----- Required -----

# PostgreSQL
POSTGRES_PASSWORD=CHANGE_ME_secure_password_here

# JWT Authentication (min 32 characters)
JWT_KEY=CHANGE_ME_min_32_chars_secure_key_here!

# Default Admin Account (created on first startup)
DEFAULT_ADMIN_EMAIL=admin@yourdomain.com
DEFAULT_ADMIN_PASSWORD=CHANGE_ME_secure_password

# ----- Optional -----

# JWT Settings (defaults shown)
JWT_ISSUER=CivicService
JWT_AUDIENCE=CivicServiceUsers

# Application Port (default: 5123)
APP_PORT=5123

# SMTP Email (leave empty to disable)
SMTP_HOST=
SMTP_PORT=587
SMTP_USE_SSL=false
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@civicservice.local
SMTP_FROM_NAME=Civic Service Portal

# Google reCAPTCHA v3 (leave empty to disable)
RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=
RECAPTCHA_MIN_SCORE=0.5

# Google Maps API (for frontend)
GOOGLE_MAPS_API_KEY=
